#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
#:import Factory kivy.factory.Factory

<Loading@Image>:
    source: "icons/b_pxl.png"

<Instr@ListView>:
    canvas:
        Color:
            rgba: 1, .7, 0, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    adapter:
        ListAdapter(data=[""], cls=ListItemButton)

<SmallLabel@Label>:
    canvas:
        Color:
            rgba: 1, .7, .3, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    size_hint_y: None
    height: 35

<SmallInput@TextInput>:
    size_hint_y: None
    height: 35
    multiline: False
    write_tab: False

<MySpinnerOption@SpinnerOption>:
    background_color: 0.1, .7, 0, 1

<MySpinner@Spinner>:
    height: 35
    size_hint_y: None
    option_cls: Factory.get("MySpinnerOption")


<Set@Popup>:
    instr_list_view: instr_list
    load_icon_view: load_icon
    size_hint: .9, .9
    auto_dismiss: False
    title: "Instrument Settings"
    BoxLayout:
        spacing: 10
        orientation: "vertical"
        Label:
            # hex( ord('Ã¤') )
            text: "Das Ger\u00e4t zum verbinden ausw\u00e4hlen"
            size_hint_y: 0.2
            font_size: "30sp"
            color: 1, .7, 0, 1
        BoxLayout:
            orientation: "horizontal"
            spacing: 30
            BoxLayout:
                orientation: "vertical"
                spacing: 50
                Loading:
                    id: load_icon
                Label:
                    text: root.device_id
                Button:
                    size_hint_y: None
                    height: 40
                    text: "Verbinden zum Ger\u00e4t"
                    on_release: root.connect_to_instrument()
                Button:
                    size_hint_y: None
                    height: 40
                    text: "Schlie\u00dfen"
                    on_release: root.dismiss()
            BoxLayout:
                orientation: "vertical"
                spacing: 3
                Label:
                    text: "Derzeit verbundene Ger\u00e4te:"
                    size_hint_y: .05
                Instr:
                    id: instr_list

<New@Popup>:
    auto_dismiss: False
    name_spinner: name_spinner
    light_spinner: light_spinner
    title: "Neue Messung"
    BoxLayout:
        spacing: 10
        orientation: "vertical"
        Label:
            text: "Neue Messung Einrichten"
            size_hint_y: 0.2
            font_size: "30sp"
            color: 1, .7, 0, 1
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                SmallLabel:
                    text: "Name des Pr\u00fcfers:"
                SmallLabel:
                    text: "Auftagsbezeichnung:"
                SmallLabel:
                    text: "Leuchte:"
                SmallLabel:
                    text: "Anzahl an Leuchten:"
            BoxLayout:
                orientation: "vertical"
                MySpinner:
                    text: "Namen ausw\u00e4hlen"
                    id: name_spinner
                SmallInput:
                    id: meas_number
                    text: root.meas_number
                MySpinner:
                    text: "Leuchte ausw\u00e4hlen"
                    id: light_spinner
                SmallInput:
                    id: number_light
                    input_filter: "int"
                    text: root.number_light

        Label:
        BoxLayout:
            orientation: "horizontal"
            spacing: 40
            height: 40
            Label:
            Button:
                size_hint: None, None
                size: 100, 40
                text: "Best\u00e4tigen"
                on_release: root.make_new_file(name_spinner.text, meas_number.text, light_spinner.text, number_light.text)
            Button:
                size_hint: None, None
                size: 100, 40
                text: "Abbrechen"
                on_release: root.dismiss()
            Label:

<Save@Popup>:
    size_hint: .9, .9
    auto_dismiss: False
    title: "Bitte das Verzeichnis des USB-Sticks angeben: " + filechooser.path
    BoxLayout:
        orientation: "vertical"
        spacing: 15
        FileChooserIconView:
            id: filechooser
            path: root.save_dire
            show_hidden: False
            canvas:
                Color:
                    rgba: 1, .7, 0, 1
                Line:
                    width: 1
                    rectangle: 0, 0, self.width, self.height
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            size_hint_y: None
            height: 40
            Button:
                text: "Speicherort ausw\u00e4hlen"
                on_release: root.save_file_name(filechooser.path)
            Button:
                text: "Abbrechen"
                on_release: root.dismiss()

<About@Popup>:
    size_hint: .4, .5
    auto_dismiss: False
    title: "About"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10
        canvas:
            Color:
                rgba: 1, .7, 0, 1
            Line:
                width: 3
                rectangle: self.x, self.y, self.width, self.height
        Label:
            text: "Zuletzt ge\u00e4ndert am: 28.03.2018"
        Label:
            text: "Nur f\u00fcr In-House Nutzung"
        Button:
            text: "Schlie\u00dfen"
            on_release: root.dismiss()

<ToolBar>:
    rows: 1
    size_hint_y: None
    height: 64
    BoxLayout:
        spacing: 10
        canvas:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            background_normal: "icons/settings_a.png"
            background_down: "icons/settings_a.png"
            opacity: 1 if self.state == 'normal' else .5
            size_hint_x: None
            width: 64
            on_release: root.set_instrument()
        Button:
            background_normal: "icons/New_a.png"
            background_down: "icons/New_a.png"
            opacity: 1 if self.state == 'normal' else .5
            size_hint_x: None
            width: 64
            on_release: root.new_file()
        Button:
            background_normal: "icons/floppy_a.png"
            background_down: "icons/floppy_a.png"
            opacity: 1 if self.state == 'normal' else .5
            size_hint_x: None
            width: 64
            on_release: root.save_file()
        Label:
        Button:
            background_normal: "icons/led_linear_logo_neu.png"
            background_down: "icons/led_linear_logo_neu.png"
            opacity: 1 if self.state == 'normal' else .5
            size_hint_x: None
            width: 250
            on_release: root.about()

# _____________________________________________________________________________________________________________________
# Main

MainWindow:

<MainWindow>:
    buttons_label: buttons_label
    toolbar: toolbar
    meas_in_range: meas_in_range
    meas_in_range_label: meas_in_range_label

    orientation: "vertical"
    spacing: 1
    ToolBar:
        id: toolbar

    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            SmallLabel:
                text: "Name: {}".format(root.tester_name)
            SmallLabel:
                text: "Auftragsbezeichung: {}".format(root.meas_number)
            SmallLabel:
                text: "Ausgew\u00e4hhlte Leuchte: {}".format(root.testing_light)
            SmallLabel:
                text: "Anzahl an Leuchten: {}".format(root.number_light)
            Label:
        BoxLayout:
            orientation: "vertical"
            Loading:
                id: meas_in_range
                size_hint_y: None
            Label:
                id: meas_in_range_label
                markup: True
                size_hint_y: None
                height: 35
            Label:


    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            Label:
            BoxLayout:
                orientation: "vertical"
                id: buttons_label
            Label:
                size_hint_y: None
                height: 300
                text: root.meas_message
                font_size: "30sp"
                markup: True

    BoxLayout:
        orientation: "horizontal"
        Label:
        BoxLayout:
            orientation: "vertical"
            SmallLabel:
                text: "Leuchte: {}/{}".format(root.curr_light, root.number_light)
            SmallLabel:
                text: "Leuchten i.O.: {} / n.i.O: {}".format(*root.io_nio)